<div class="vlt-vault-item vlt-vault-item-{{unbound color}} pull-left">
    {{#link-to 'Vault.index' this class='vlt-vault-item-href'}}
        <div class="vlt-vault-item-header vlt-vault-item-header-{{unbound color}}">
            <div class="vlt-vault-item-header-icon"></div>
            <h2>{{dot-dot-dot value=name height=60}}</h2>
        </div>
        <div class="vlt-vault-item-content vlt-vault-item-content-{{unbound color}}">
            {{#if description}}
                {{dot-dot-dot value=description height=80}}
            {{else}}
                No description given
            {{/if}}
        </div>
        <div class="vlt-vault-item-footer">
            <div class="vlt-vault-item-footer-user">
                {{printUser created_by  ellipsis=12 prefix='Created by:'}}
            </div>
            <div class="vlt-vault-item-footer-time">
                {{printAgo updated_at prefix='Last modified at:' }}
            </div>
        </div>
    {{/link-to}}
</div>
