<div class="container">
    <div class="vlt-page vlt-page-plain">
        <div class="vlt-dialog col-md-8 col-md-offset-2 top-50">
            <form>
                <div class="vlt-dialog-content">
                    <div class="vlt-dialog-header">
                        <h2>Create new card</h2>
                    </div>
                    <div class="vlt-dialog-body">
                        <div class="row">

                            <div class="col-md-7">

                                <div class="form-group" {{bind-attr class='content.errors.name:has-error'}}>
                                    <label for="card-name">Name</label>
                                    {{view Em.TextField elementId='card-name' valueBinding='content.name' class="form-control"}}
                                    <span class="error">
                                        {{content.errors.name}}
                                    </span>
                                </div>

                                <div class="form-group" {{bind-attr class='content.errors.description:has-error'}}>
                                    <label for="card-description">Description</label>
                                    {{view Em.TextArea elementId='card-description' valueBinding='content.description' class="form-control" rows=5}}
                                    <span class="error">
                                        {{content.errors.description}}
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-5 bottom-15">

                                <div class="callout callout-info">
                                    <h4>Card will be shared with:</h4>

                                     {{member-box roles=memberships user=auth.user object=vault}}
                                </div>
                            </div>


                            <div class="clearfix"></div>
                        </div>


                    </div>
                    <div class="vlt-dialog-footer">
                        <a href="javascript:window.history.go(-1)" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            Back
                        </a>
                        <button {{ action save}} class="btn btn-primary">
                            <span class="glyphicon glyphicon-ok"></span>
                            Create new card
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
</div>