<div class="container">
    <div class="vlt-page vlt-page-plain">
        <div class="vlt-dialog col-md-8 col-md-offset-2 top-50">
            <form>
                <div class="vlt-dialog-content">
                    <div class="vlt-dialog-header">
                        <h2>Create new vault</h2>
                    </div>
                    <div class="vlt-dialog-body">

                        <div class="col-md-7">

                            <div class="form-group" {{bind-attr class='content.errors.name:has-error'}}>
                                <label for="workspace-name">Name</label>
                                {{view Em.TextField
                                elementId='workspace-name'
                                valueBinding='content.name'
                                class="form-control"
                                }}
                                <span class="error">
                                    {{content.errors.name}}
                                </span>
                            </div>

                            <div class="form-group"  {{bind-attr class='content.errors.color:has-error'}}>
                                <label for="vault-color">Color</label>
                                {{view Vaultier.VaultColorView valueBinding='content.color'}}
                                <span class="error">
                                    {{content.errors.name}}
                                </span>
                            </div>

                            <div class="form-group" {{bind-attr class='content.errors.description:has-error'}}>
                                <label for="workspace-description">Description</label>

                                {{view Em.TextArea
                                elementId='workspace-description'
                                valueBinding='content.description'
                                class="form-control"
                                rows=5
                                }}
                                <span class="error">
                                    {{content.errors.description}}
                                </span>
                            </div>
                        </div>

                        <div class="col-md-5 bottom-15">

                            <div class="callout callout-info">
                                <h4>Vault will be shared with:</h4>

                                {{roles-admin-box roles=memberships user=auth.user object=workspace}}
                            </div>
                        </div>


                        <div class="clearfix"></div>


                    </div>
                    <div class="vlt-dialog-footer">
                        <a href="javascript:window.history.go(-1)" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            Back
                        </a>
                        <button {{ action save}} {{bind-attr disabled=saveDisabled }} class="btn btn-primary">
                            <span class="glyphicon glyphicon-ok"></span>
                            Create new vault
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="clearfix"></div>
    </div>
</div>






