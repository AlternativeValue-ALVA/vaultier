<div class="container">
    <div class="vlt-page vlt-page-plain">
            <div class="vlt-dialog col-md-10 col-md-offset-1 top-50">

                <div class="vlt-dialog-content">
                    <div class="vlt-dialog-header">
                        <h2>Create New Secret Wizard</h2>

                        <ul class="nav nav-pills nav-justified vlt-wizard-steps">
                            {{#view view.TabView tab="createSelect" }}
                                <a>
                                    Choose a secret type
                                    <span class="glyphicon glyphicon glyphicon-chevron-right"></span>
                                </a>
                            {{/view}}

                            {{#view view.TabView tab="createSubmit" }}
                                <a>
                                    Fill in details
                                    <span class="glyphicon glyphicon glyphicon-chevron-right"></span>
                                </a>
                            {{/view}}

                        </ul>
                    </div>
                    <div class="vlt-dialog-body">
                        {{ outlet tab }}
                    </div>
                    <div class="vlt-dialog-footer">
                        <a href="javascript:history.go(-1)" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            Back
                        </a>
                        {{#if submitButtonShown}}
                            <a {{ action submit }} class="btn btn-primary">
                                <span class="glyphicon glyphicon-ok"></span>
                                Submit
                            </a>
                        {{/if}}

                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
    </div>
</div>



