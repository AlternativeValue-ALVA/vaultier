<div class="row">
    <div class="col-md-12">

        <div class="vlt-dialog vlt-dialog-window">
            <form>
                <div class="vlt-dialog-content">
                    <div class="vlt-dialog-header">
                        <h2>Edit workspace</h2>
                    </div>
                    <div class="vlt-dialog-body">

                        <div class="col-md-8 col-md-offset-2">

                            <div class="form-group" {{bind-attr class='errors.name:has-error'}}>
                                <label for="workspace-name">Name</label>

                                {{view Em.TextField
                                elementId='workspace-name'
                                valueBinding='content.name'
                                class="form-control"
                                }}
                                <span class="error">
                                    {{content.errors.name}}
                                </span></div>

                            <div class="form-group" {{bind-attr class='errors.description:has-error'}}>
                                <label for="workspace-description">Description</label>
                                {{view Em.TextArea
                                elementId='workspace-description'
                                valueBinding='content.description'
                                class="form-control"
                                rows=5
                                }}
                                <span class="error">
                                    {{content.errors.description}}
                                </span>
                            </div>
                        </div>

                        <div class="clearfix"></div>

                    </div>
                    <div class="vlt-dialog-footer">
                        <a href="javascript:window.history.go(-1)" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            Back
                        </a>
                        <button {{ action save}} {{bind-attr disabled=saveDisabled }} class="btn btn-primary">
                            <span class="glyphicon glyphicon-ok"></span>
                            Save changes
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

