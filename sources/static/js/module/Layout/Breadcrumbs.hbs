{{#if breadcrumbss }}
    <div class="vlt-breads">
        <div class="container">
            <ol class="breadcrumb">
                {{#each breadcrumbs.items }}
                    {{#if last}}
                        <li class="active">
                            <h2>
                               {{ title }}
                            </h2>
                        </li>
                    {{else}}
                        <li>
                            <a {{bind-attr href=link}}>
                                {{ title }}
                            </a>
                        </li>
                    {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
{{/if}}