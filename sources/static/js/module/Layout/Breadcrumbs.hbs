{{#if breadcrumbs }}
    <div class="vlt-breads">
        <div class="container">
            <ol class="breadcrumb">
                {{#each breadcrumbs.items }}
                    {{#if last}}
                        <li class="active">
                            <div class="vlt-bread-item-wrapper">
                                {{#if icon}}
                                    <img class="vlt-icon" {{bind-attr src=icon}}>
                                {{/if}}
                                <h2>
                                    {{ title }}
                                </h2>
                            </div>
                        </li>
                    {{else}}
                        <li>
                            <div class="vlt-bread-item-wrapper">
                                <a {{bind-attr href=link}}>
                                    {{#if icon}}
                                        <img class="vlt-icon" {{bind-attr src=icon}}>
                                    {{/if}}
                                    {{ title }}
                                </a>
                            </div>
                        </li>
                    {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
{{/if}}