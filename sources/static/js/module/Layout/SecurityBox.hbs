{{#if auth.isAuthenticated}}
    <div class="vlt-security-box dropdown pull-right">
        {{gravatarImg auth.user.clean.email size=25 class="vlt-avatar"}}

        <a href="#" class="vlt-username dropdown-toggle" data-toggle="dropdown">
            {{auth.user.clean.nickname}}
        </a>

        <ul class="dropdown-menu caret-right vlt-dropdown">
            <li>{{#link-to 'Settings.index'}}Settings{{/link-to}}</li>
            <li><a {{ action logout target=view }} href="" >Logout</a></li>

            {{#if showToken}}
                <li><a {{bind-attr  href=auth.token}} class="copy-token" >Copy token to clipboard</a></li>
            {{/if}}
        </ul>
    </div>
{{else}}
    <div class=" vlt-security-box pull-right">
       {{#link-to 'AuthLogin' class="btn btn-primary btn-sm" }}Login{{/link-to}}
       {{#link-to 'AuthRegister' class="btn btn-default btn-sm" }}Create an account{{/link-to}}
    </div>
{{/if}}