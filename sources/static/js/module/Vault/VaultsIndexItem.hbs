{{#if id}}
    {{#link-to 'Vault.index' this class="vlt-item vlt-vault-item" }}
        <div class="vlt-header">
            <div class="vlt-icon">
                <img src="/static/images/icon-vault-dark-blue.png">
            </div>
            <div class="vlt-title">
                <h3>
                    {{ellipsis name 35}}
                </h3>

            </div>
        </div>
        <div class="vlt-body">
            {{#if description}}
                {{ellipsis description 250  }}
            {{else}}
                No description given
            {{/if}}
        </div>
        <div class="vlt-footer">
            <div class="vlt-footer-item help-block pull-left">
                {{printUser created_by  ellipsis=12 prefix='Created by:'}}
            </div>
            <div class="vlt-footer-item help-block pull-right">
                {{printAgo updated_at prefix='Latest modification at:' }}
            </div>
            <div class="clearfix"></div>
        </div>
    {{/link-to}}
{{/if}}

