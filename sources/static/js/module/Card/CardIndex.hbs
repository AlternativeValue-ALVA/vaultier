<div class="vlt-page-nav">

    <div class="vlt-page-toolbar pull-right">
        <div>


            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle btn-sm" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-cog"></span>
                </button>
                <ul class="dropdown-menu caret-left">

                    <li>
                        {{#link-to "Vault.edit" workspace vault}}
                            Edit vault
                        {{/link-to}}
                    </li>
                    <li><a href="#">Delete vault</a></li>
                </ul>
            </div>

            <a href="#" class="btn btn-default">
                <span class="glyphicon glyphicon-user"></span>
                Collaborate
            </a>

            {{#if length}}

                {{#link-to "Card.create" class="btn btn-primary"}}
                    <span class="glyphicon glyphicon-plus"></span>
                    Create new Card
                {{/link-to}}
            {{/if}}

        </div>
    </div>

    <div class="clearfix"></div>

</div>

<div class="row">
    <div class="col-md-12">

        {{#if length}}
            {{#each}}
                {{view Vaultier.CardIndexItemView}}
            {{/each}}
        {{else}}
            <div class="jumbotron col-md-8 col-md-offset-2">
                <h1>You do not have any Card yet</h1>

                <p>
                    What are Cards for? This example is a quick exercise to illustrate how the default, static
                    includes the responsive CSS and HTML, so it also adapts to your viewport and device.
                </p>

                <p class="top-30">
                    {{#link-to "Card.create" class="btn btn-lg btn-primary" }}
                        <span class="glyphicon glyphicon-plus"></span>
                        Create new Card
                    {{/link-to}}
                </p>
            </div>
        {{/if}}

    </div>
</div>