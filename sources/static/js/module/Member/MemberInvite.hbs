<div class="row">
    <div class="col-md-12">

        <div class="vlt-dialog vlt-tabs-modal">
            <form>
                <div class="vlt-dialog-content">
                    <div class="vlt-dialog-header">
                        <h2>Invite collaborators</h2>
                    </div>
                    <div class="vlt-dialog-body">

                        <div class="col-md-10 col-md-offset-1">

                            <div class="form-group">
                                <label for="card-name">Select users</label>

                                {{view Vaultier.MemberInviteInput
                                store=store
                                class="form-control"
                                elementId="invite-form-invited"
                                valueBinding="invited"
                                }}
                                <span class="help-block"><b>Select existing users or invite new by email</b>. You can invite more users at once. Seperate them with space, comma or semicolon</span>
                            </div>

                            <div class="form-group">
                                <label for="card-description">Permissions</label>
                                {{errors.description}}

                                {{view Ember.Select
                                class="form-control"
                                elementId="invite-form-role"
                                contentBinding="roles"
                                optionValuePath="content.value"
                                optionLabelPath="content.text"
                                valueBinding="role"
                                }}

                            </div>
                        </div>

                        <div class="clearfix"></div>

                    </div>
                    <div class="vlt-dialog-footer">
                        <a href="javascript:window.history.go(-1)" class="btn btn-default btn-sm">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            Back
                        </a>
                        <button {{bind-attr disabled=isButtonNextEnabled }} {{ action save invited role}}
                                class="btn btn-primary">
                            <span class="glyphicon glyphicon-ok"></span>
                            Create new card
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
