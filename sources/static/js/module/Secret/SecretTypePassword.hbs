<div class="col-md-10 col-md-offset-1">

    <h4>Please fillout data for your password secret</h4>


    <div class="form-group" {{bindAttr class='errors.url:has-error'}}>
        <label for="secret-url">URL</label>
        {{errors.url}}
        {{view Em.TextField elementId='secret-url' valueBinding='content.url' class="form-control"}}
    </div>

    <div class="form-group" {{bindAttr class='errors.username:has-error'}}>
        <label for="secret-username">Username</label>
        {{errors.username}}
        {{view Em.TextField elementId='secret-username' valueBinding='content.username' class="form-control"}}
    </div>

    <div class="form-group" {{bindAttr class='errors.password:has-error'}}>
        <label for="secret-password">Password</label>
        {{errors.password}}
        {{view Em.TextField elementId='secret-password' valueBinding='content.password' class="form-control"}}
    </div>

    <div class="form-group" {{bindAttr class='errors.note:has-error'}}>
        <label for="secret-note">Note</label>
        {{errors.note}}
        {{view Em.TextArea elementId='secret-note' valueBinding='content.note' class="form-control" rows=5}}
    </div>
    <div class="help-block">
        Markdown is available. Markdown manual <a
            href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet"
            target="_blank">
        here
    </a>
    </div>
</div>

<div class="clearfix"></div>