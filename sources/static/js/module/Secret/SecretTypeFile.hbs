<div class="col-md-10 col-md-offset-1">

    <div class="form-group" {{bind-attr class='errors.name:has-error'}}>
        <label for="secret-name">Name</label>
        {{errors.url}}
        {{view Em.TextField elementId='secret-name' valueBinding='content.name' class="form-control"}}
        <div class="help-block">
            Informational field. Do not enter any sensitive information. This field is not cyphered
        </div>
    </div>

    <h4>Please fillout data for your password secret</h4>

    <div class="form-group" {{bind-attr class='errors.url:has-error'}}>
        <label for="secret-name">Name</label>
        {{errors.url}}
        {{view Em.TextField elementId='secret-name' valueBinding='content.name' class="form-control"}}
        <div class="help-block">
            Informational field. Do not enter any sensitive information. This field is not cyphered
        </div>
    </div>

    <div class="form-group" {{bind-attr class='errors.url:has-error'}}>
        <label for="secret-url">URL</label>
        {{errors.url}}
        {{view Em.TextField elementId='secret-url' valueBinding='content.url' class="form-control"}}
    </div>

    <div class="form-group" {{bind-attr class='errors.username:has-error'}}>
        <label for="secret-username">Username</label>
        {{errors.username}}
        {{view Em.TextField elementId='secret-username' valueBinding='content.username' class="form-control"}}
    </div>

    <div class="form-group" {{bind-attr class='error:has-error'}}>
        <label for="secret-file" class="control-label">Secret file</label>

        <div class="input-group">
            <input {{bind-attr value=filename}}
                    type="text"
                    class="form-control"
                    readonly=""
                    placeholder="Select your key">

                        <span class="vlt-login-key input-group-btn btn btn-default btn-file">
                            Browse <input type="file">
                        </span>
        </div>
    </div>


    <div class="form-group" {{bind-attr class='errors.name:has-error'}}>
        <label for="secret-note">Note</label>
        {{errors.name}}
        {{view Em.TextArea elementId='secret-note' valueBinding='content.note' class="form-control" rows=5}}
    </div>
</div>

<div class="clearfix"></div>