<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button {{action cancel content}} type="button" class="close" data-dismiss="modal"
                                                  aria-hidden="true">&times;</button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">
                <form>

                    <div class="form-group" {{bindAttr class='errors.name:has-error'}}>
                        <label for="vault-name">Vault name</label>
                        {{errors.name}}
                        {{view Em.TextField elementId='vault-name' valueBinding='content.name' class="form-control"}}
                    </div>

                    <div class="form-group">
                        <label for="vault-description">Vault description</label>
                        {{errors.description}}
                        {{view Em.TextArea elementId='vault-description' valueBinding='content.description' class="form-control"}}
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button {{action cancel content}} type="button" class="btn btn-default" data-dismiss="modal">Close
                </button>
                <button {{action submit content}} type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

