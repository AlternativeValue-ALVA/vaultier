<div class="vlt-member-box">
    {{#if hasWrite}}
        <div class="vlt-perms-section">
            Users able to manage
        </div>
        <div class="vlt-perms-roles">
            {{#each role in rolesWrite}}
                {{printUser role.member  size=50 disableName=1}}
            {{/each}}
        </div>
    {{/if}}

    {{#if hasRead}}
        <div class="vlt-perms-section">
            Users able to read
        </div>
        <div class="vlt-perms-roles">
            {{#each role in rolesRead}}
                {{printUser role.member  size=50 disableName=1}}
            {{/each}}
        </div>
    {{/if}}

        {{#if hasCreate}}
        <div class="vlt-perms-section">
            Users able to create only
        </div>
        <div class="vlt-perms-roles">
            {{#each role in rolesCreate}}
                {{printUser role.member  size=50 disableName=1}}
            {{/each}}
        </div>
    {{/if}}

</div>